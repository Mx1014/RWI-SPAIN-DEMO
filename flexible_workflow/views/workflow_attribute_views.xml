<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="workflow_attribute_view_tree" model="ir.ui.view">
        <field name="name">workflow.attribute.view.tree</field>
        <field name="model">workflow.attribute</field>
        <field name="arch" type="xml">
            <tree string="Workflow Attributes" editable="bottom">
                <field name="type"/>
                <field name="expression"/>
            </tree>
        </field>
    </record>

    <record id="workflow_attribute_view_form" model="ir.ui.view">
        <field name="name">workflow.attribute.view.form</field>
        <field name="model">workflow.attribute</field>
        <field name="arch" type="xml">
            <form string="Workflow Attribute">
                <sheet>
                    <group>
                        <field name="type"/>
                        <field name="expression"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>